@model QLBVot.Models.DonHang

<h2>Thông tin giao hàng</h2>

@using (Html.BeginForm("XacNhanDatHang", "DatHang", FormMethod.Post))
{
    @Html.HiddenFor(model => model.MaDonHang)

    <div class="form-group">
        <label for="tenKhachHang">Tên khách hàng:</label>
        @Html.TextBoxFor(model => model.TenKhachHang, new { @class = "form-control", required = "required", id = "tenKhachHang" })
    </div>

    <div class="form-group">
        <label for="diaChi">Mã đơn:</label>
        @Html.TextBoxFor(model => model.MaDonHang, new { @class = "form-control", required = "required", id = "maDonHang" })
    </div>

    <div class="form-group">
        <label for="soDienThoai">Trạng thái:</label>
        @Html.TextBoxFor(model => model.TrangThai, new { @class = "form-control", required = "required", id = "trangThai" })
    </div>
    <button type="submit" class="btn btn-primary">Xác nhận</button>
}
