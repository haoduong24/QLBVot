<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Shopping Now!</title>
    @Styles.Render("~/Content/css") <!-- Kết nối các file CSS -->
    @Scripts.Render("~/bundles/modernizr") <!-- Kết nối các file script -->
    <!-- Thêm Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <style>
        /* CSS mặc định cho toàn bộ trang */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
        }

        /* Thanh Navbar */
        .navbar {
            background-color: #333;
            color: white;
            padding: 10px 0;
            text-align: center;
        }

            .navbar a {
                color: white;
                text-decoration: none;
                padding: 10px 15px;
                margin: 0 5px;
                display: inline-block;
            }

                .navbar a:hover {
                    background-color: #ff9f1c;
                    color: white;
                }

            .navbar .brand {
                font-size: 24px;
                font-weight: bold;
                margin-right: 30px;
            }

        /* Các mục trong navbar */
        .navbar-nav {
            list-style-type: none;
            padding: 0;
            margin: 0;
            display: flex;
            justify-content: flex-end; /* Căn chỉnh các mục về phía bên phải */
        }

            .navbar-nav li {
                display: inline-block;
            }

            .navbar-nav .nav-item {
                display: inline-block;
                padding: 0 10px;
            }

        /* Điều chỉnh vị trí logout về góc phải */
        .logout-icon {
            margin-left: auto; /* Tự động căn chỉnh về phía bên phải */
        }

        .alert {
            background-color: #ffeb3b;
            color: #333;
            padding: 15px;
            border-radius: 5px;
            margin-top: 20px;
        }

        /* Footer */
        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px;
            position: fixed;
            width: 100%;
            bottom: 0;
        }

        /* Main Content */
        .body-content {
            padding: 20px;
        }

        /* Thêm padding cho liên kết đăng nhập */
        .nav-item {
            padding: 10px;
        }

        .cart-icon {
            font-size: 20px;
            margin-left: 10px;
        }

        .logout-icon {
            font-size: 20px;
            margin-left: 10px;
        }

        /* Hiển thị form đăng nhập khi chưa đăng nhập */
        .login-form {
            text-align: center;
            padding: 50px 0;
        }

            .login-form input[type="text"],
            .login-form input[type="password"] {
                padding: 10px;
                margin: 10px 0;
                width: 300px;
                font-size: 16px;
            }

            .login-form button {
                padding: 10px 15px;
                background-color: #333;
                color: white;
                border: none;
                cursor: pointer;
            }

                .login-form button:hover {
                    background-color: #ff9f1c;
                }
    </style>
</head>
<body>
    <!-- Navbar sẽ luôn hiển thị -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Shopping Now!</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <!-- Menu điều hướng -->
                    <li class="nav-item">@Html.ActionLink("Chi Tiết Đơn Hàng", "Index", "ChiTietDonHangs", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Đơn Hàng", "Index", "DonHangs", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Hoá Đơn", "Index", "HoaDons", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Khách Hàng", "Index", "KhachHangs", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Kho", "Index", "Khoes", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Nhân Viên", "Index", "NhanViens", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Thanh Toán", "Index", "ThanhToans", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Sản Phẩm", "Index", "Vots", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">
                        <a class="cart-icon" href="@Url.Action("XemGioHang", "GioHang")">
                            <i class="fas fa-shopping-cart"></i>
                            <span id="cart-count">@ViewBag.CartCount</span>
                        </a>
                    </li>
                    <li class="nav-item logout-icon">
                        <a class="logout-icon" href="@Url.Action("Logout", "Dangnhap")">
                            <i class="fas fa-sign-out-alt"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; @DateTime.Now.Year Shopping Now!</p>
    </footer>

    @Scripts.Render("~/bundles/jquery") <!-- Kết nối jQuery -->
    @Scripts.Render("~/bundles/bootstrap") <!-- Kết nối Bootstrap -->
</body>
</html>
