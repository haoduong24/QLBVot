@{
    ViewBag.Title = "Đăng ký";
}

<h2>Đăng ký</h2>

@using (Html.BeginForm("Register", "Dangky", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Tên đăng nhập")
        @Html.TextBox("username", null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Email")
        @Html.TextBox("email", null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Mật khẩu")
        @Html.Password("password", null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Xác nhận mật khẩu")
        @Html.Password("confirmPassword", null, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Đăng ký</button>
}

<p>
    <a href="@Url.Action("Login", "Dangnhap")">Đã có tài khoản? Đăng nhập ngay!</a>
</p>

@* Hiển thị thông báo lỗi nếu có *@
@if (!String.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
{
    <div class="alert alert-danger">
        @ViewData["ErrorMessage"]
    </div>
}
